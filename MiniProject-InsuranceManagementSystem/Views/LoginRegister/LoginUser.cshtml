
@{
    ViewBag.Title = "LoginUser";
}

<style>
    body {
        background-color: darkgray;
    }

 
</style>

@using (Html.BeginForm("LoginUser", "LoginRegister"))

{

    <div class="container" style="margin-top: 4rem;">
        <div class="row justify-content-center align-items-center p-5">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem; box-shadow: 0px 7px 41px -4px black; ">
                    <div class="row">
                        <div class="col-md-6 col-lg-5 mb-3">
                            <img src="~/images/login.jpg"
                                 alt="insurance logo" class="img-fluid" />
                            <h2 style="margin-top: 0; text-align: center; font-weight: bolder; font-family: 'Segoe UI'; color: #381704">A Life Full Of Care</h2>
                        </div>
                        <div class="col-md-6 col-lg-7 align-items-center">
                            <div class="card-body p-4 p-lg-5">

                                <form action="~/">

                                    <div class="align-items-center mb-3 pb-1">
                                        <span class="h1 fw-bold mb-0">Login</span>
                                    </div>

                                    <h5 class="mb-3 pb-3" style="letter-spacing: 1px;">Save you and your family</h5>

                                    <div class="mb-4">
                                        <label class="form-label" for="username">Username</label>

                                        <input type="text" id="username" name="username" class="form-control form-control-lg" placeholder="Enter username" required  minlength="3"/>
                                    </div>

                                    <div class="mb-2">
                                        <label class="form-label" for="password">Password</label>

                                        <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Enter password" required minlength="3"/>
                                        <img src="~/images/passwordInVisible.png" width="20" style="margin-left:25rem;margin-top:-5.4rem;" id="password-visibility" onclick="passwordVisibilityChanger()"/>

                                    </div>
                                    @if (ViewBag.LoginFailed != null)
                                    {
                                        <p style="color:red;font-size:1.5rem; font-weight:bold">Incorrect username or password, try again !</p>
                                    }
                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg" type="submit">Login</button>


                                    </div>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account?  @Html.ActionLink("Register Here", "Registration", "LoginRegister", new { area = "" }, new { @style = "font-size:15px; font-weight:bold; color:cornflowerblue;" });
                                    </p>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<script>

    function passwordVisibilityChanger() {
        var password = document.getElementById('password');

        if (password.type == 'password') {
            password.type = 'text';
            document.getElementById('password-visibility').src = '/images/passwordVisible.png';
        } else {
            password.type = 'password';
            document.getElementById('password-visibility').src = '/images/passwordInVisible.png';

        }

    }

</script>





